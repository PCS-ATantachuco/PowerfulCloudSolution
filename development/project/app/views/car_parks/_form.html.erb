<%= simple_form_for @car_park, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= f.input :address %>
  <%= f.input :price %>
  <%= f.input :url_image %>
  <%= f.input :description %>
  <%= f.input :state %>
  <%= f.input :started_at %>
  <%= f.input :ended_at %>
  <%= f.input :started_time %>
  <%= f.input :ended_time %>
  <%= f.input :user_id %>
  <%= f.input :district_id %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                car_parks_path, :class => 'btn btn-default' %>
<% end %>
